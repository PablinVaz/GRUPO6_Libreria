<div class="card bg-light">
    <article class="card-body mx-auto">
        <h1 class="card-title md-4 text-center">Registro de usuario</h1>
        <form action="/users/signup" method="POST">
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-user-secret"></i></span>
                </div>
                <input name="username" class="form-control" placeholder="Nombre de ususario" type="text" value="{{username}}">
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                </div>
                <input name="name" class="form-control" placeholder="Nombre completo" type="text"value="{{name}}">
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                </div>
                <input name="email" class="form-control" placeholder="Email" type="email" value="{{email}}">
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-key"></i></span>
                </div>
                <input name="password" class="form-control" placeholder="Contraseña" type="password">
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-key"></i></span>
                </div>
                <input name="confirm_password" class="form-control" placeholder="Repite la contraseña" type="password">
            </div>
            <button class="btn btn-dark btn-block">Resgistrarse</button>
        </form>
    </article>
</div>