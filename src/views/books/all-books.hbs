<h1 class="text-center">Catalogo de libros</h1>
<div class="row">
    
    {{#each books}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">{{title}}<a href="/books/edit/{{_id}}"><i class="fa fa-edit"></i></a></h4>
                    <p>{{publisher}}</p>
                    <p>{{stock}}</p>
                    <p>{{price}} &euro;</p>
                    {{!-- <<<DETALLES AQUI>>> 
                        Con '?_method=DELETE' y el <input type="hidden" name="_method" value="DELETE"> le decimos que borre el libro --}}
                    <form action="/books/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-block btn-sm">Borrar</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>