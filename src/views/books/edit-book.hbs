<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Editar libro</h3>
        </div>
        <div class="card-body">
            <form action= "/books/edit/{{libro._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" value="{{libro.title}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="publisher" class="form-control" value="{{libro.publisher}}">
                </div>
                <div class="form-group">
                    <input type="text" name="stock" class="form-control" value="{{libro.stock}}">
                </div>
                <div class="form-group">
                    <input type="text" name="price" class="form-control" value="{{libro.price}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-dark btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>